{
  "name": "@wasmer/wasi",
  "version": "0.0.1",
  "description": "Run WASI on the Browser easily",
  "keywords": [
    "webassembly",
    "wasm",
    "wasi"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.iife.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Syrus Akbary <syrus@wasmer.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/wasmerio/js-wasi"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "precompile": "cd test/rs && make all",
    "start": "npm run dev",
    "dev": "",
    "build": "npx run-s lib:build",
    "lib:build": "npx rollup -c --environment PROD",
    "lint": "npx run-s lint:js lint:ts:tslint lint:ts:preetier",
    "lint:js": "npx prettier --write rollup.*.js",
    "lint:ts:tslint": "npx tslint --project tsconfig.json -t codeFrame 'lib/**/*.ts' 'test/**/*.ts'",
    "lint:ts:preetier": "npx prettier --write lib/**/*.ts test/**/*.ts",
    "test": "npx jest --config jest.config.js",
    "test:watch": "npx jest --config jest.config.js --watch",
    "test:prod": "npx run-s lint test",
    "docs": "typedoc src/ --out docs --target es6 --theme minimal --mode file"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.10.0",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3"
  }
}
