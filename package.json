{
  "name": "@wasmer/wasi",
  "version": "0.0.1",
  "description": "Run WASI on the Browser easily",
  "keywords": [
    "webassembly",
    "wasm",
    "wasi"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.iife.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Syrus Akbary <syrus@wasmer.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/wasmerio/js-wasi"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "precompile": "cd test/rs && make all",
    "start": "npm run dev",
    "dev": "npm run dev:wapm-shell",
    "build": "npx run-s build:lib",
    "dev:lib": "npx rollup -c --watch --environment LIB,DEV",
    "build:lib": "npx rollup -c --environment LIB,PROD",
    "dev:wapm-shell": "npx rollup -c --watch --environment LIB,WAPM_SHELL,DEV",
    "build:wapm-shell": "npx rollup -c --environment LIB,WAPM_SHELL,PROD",
    "lint": "npx run-s lint:js lint:ts:tslint lint:ts:preetier",
    "lint:js": "npx prettier --write rollup.*.js",
    "lint:ts:tslint": "npx tslint --project tsconfig.json -t codeFrame 'lib/**/*.ts' 'test/**/*.ts'",
    "lint:ts:preetier": "npx prettier --write lib/**/*.ts test/**/*.ts",
    "test": "npx jest --config jest.config.js",
    "test:watch": "npx jest --config jest.config.js --watch",
    "test:prod": "npx run-s lint test",
    "docs": "npx typedoc lib/ --out docs --target es6 --theme minimal --mode file"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.10.0",
    "@types/jest": "^24.0.16",
    "browser-process-hrtime": "^1.0.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "memfs": "^2.15.5",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.0",
    "postcss-import": "^12.0.1",
    "preact": "^8.4.2",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "randomfill": "^1.0.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-url": "^2.2.2",
    "shell-parse": "0.0.2",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "url": "^0.11.0",
    "xterm": "^3.14.5"
  }
}
