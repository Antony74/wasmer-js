{
  "name": "@wasmer/wasm-terminal",
  "version": "0.0.1",
  "description": "A DOM Element for providing a Terminal, TTY, and Shell for running Wasm \\ wasi programs.",
  "module": "dist/index.esm.js",
  "browser": "dist/index.iife.js",
  "typings": "dist/packages/wasm-terminal/lib/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "../../LICENSE",
    "README.md"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "build": "npx rollup -c --environment LIB,WORKER,PROD",
    "dev": "npx rollup -c --environment LIB,WORKER",
    "test": "npx jest --config jest.config.js",
    "test:watch": "npx jest --config jest.config.js --watchAll",
    "docs": "npx typedoc lib/ --out docs --target es6 --theme minimal --mode file"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wasmerio/wasmer-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "wasm",
    "wasi",
    "tty",
    "shell",
    "terminal",
    "html",
    "xterm",
    "dom",
    "browser"
  ],
  "author": "Aaron Turner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wasmerio/wasmer-js/issues"
  },
  "homepage": "https://github.com/wasmerio/wasmer-js/tree/master/packages/wasm-terminal",
  "dependencies": {
    "@wasmer/wasi": "^0.0.1",
    "@wasmer/wasm-transformer": "^0.0.1",
    "@wasmer/wasmfs": "^0.0.1",
    "comlink": "^4.0.2",
    "shell-parse": "0.0.2",
    "shell-quote": "^1.7.1",
    "xterm": "^3.14.5"
  }
}
